$(document).ready(function(){function n(n){var t=0;return n.length==0?"":n.length<6?($("#pwdStrength").removeClass(),$("#pwdStrength").addClass("short"),"Muy débil"):(n.length>7&&(t+=1),n.match(/([a-z].*[A-Z])|([A-Z].*[a-z])/)&&(t+=1),n.match(/([a-zA-Z])/)&&n.match(/([0-9])/)&&(t+=1),n.match(/([!,%,&,@,#,$,^,*,?,_,~])/)&&(t+=1),n.match(/(.*[!,%,&,@,#,$,^,*,?,_,~].*[!,%,&,@,#,$,^,*,?,_,~])/)&&(t+=1),t<2?($("#pwdStrength").removeClass(),$("#pwdStrength").addClass("weak"),"Débil"):t==2?($("#pwdStrength").removeClass(),$("#pwdStrength").addClass("good"),"Bueno"):($("#pwdStrength").removeClass(),$("#pwdStrength").addClass("strong"),"Fuerte"))}$("#Contrasena").keyup(function(){$("#pwdStrength").html(n($("#Contrasena").val()))})})